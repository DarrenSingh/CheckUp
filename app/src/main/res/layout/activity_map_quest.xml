<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapQuestActivity">

    <com.mapquest.mapping.maps.MapView
        android:id="@+id/mapquestMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mapquest_app_key="igQMb7DGDB15GRJzt9JMUphxNtnXc1qO" />

    <EditText
        android:id="@+id/edit_search_location"
        android:layout_width="350dp"
        android:layout_height="56dp"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:maxLines="1"
        android:hint="Enter Address"/>

    <ImageView
        android:id="@+id/img_search_location"
        android:src="@drawable/ic_search_black_24dp"
        android:layout_alignTop="@id/edit_search_location"
        android:layout_alignRight="@id/edit_search_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"/>

    <ListView
        android:id="@+id/list_search_location"
        android:layout_alignTop="@id/edit_search_location"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:visibility="gone"/>


</RelativeLayout>