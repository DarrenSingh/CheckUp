<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/barColor</item>
    </style>

    <!-- Linking customized changes to action bar background colour and textStyle   -->
    <style name="barColor" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/gradient</item>
        <item name="titleTextStyle">@style/barText</item>
    </style>

    <!-- Customizing action bar font style  -->
    <style name="barText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/oswald_bold</item>
    </style>

    <!-- Style code for Subtitles  -->
    <style name="subTitleTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <!-- Style code for normal text  -->
    <style name="normalTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- Style code for messages  -->
    <style name="messageTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/courier_prime</item>
    </style>

    <!-- Style code for button  -->
    <style name="buttonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/my_button</item>
    </style>

</resources>
